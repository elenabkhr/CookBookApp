<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_main"
        android:layout_marginBottom="@dimen/margin_half"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            style="@style/StyleNavButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_between_button_half"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonCategories_color"
            android:includeFontPadding="false"
            android:text="@string/title_categories" />

        <com.google.android.material.button.MaterialButton
            style="@style/StyleNavButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_between_button_half"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonFavorites_color"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/title_favourites"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd"
            app:iconSize="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>