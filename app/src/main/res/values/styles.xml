<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitleCard14" parent="StyleTitle14">
        <item name="android:textColor">@color/text_title_categories_color</item>
    </style>

    <style name="StyleDescriptionCard12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/text_description</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textColor">@color/text_title_categories_color</item>
    </style>

    <style name="StyleIngredient" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="StyleMethod" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="StylePortions" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_description</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="StyleFavoritesStub" parent="StylePortions">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>