        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="StyleMethod" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="StylePortions" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/text_description</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
